<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>action.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TarefaServlet</servlet-name>
        <servlet-class>action.TarefaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AtividadeServlet</servlet-name>
        <servlet-class>action.AtividadeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ContaServlet</servlet-name>
        <servlet-class>action.ContaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AnotacaoServlet</servlet-name>
        <servlet-class>action.AnotacaoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OportunidadeServlet</servlet-name>
        <servlet-class>action.OportunidadeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CampanhaServlet</servlet-name>
        <servlet-class>action.CampanhaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VendaServlet</servlet-name>
        <servlet-class>action.VendaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DACControllerServlet</servlet-name>
        <servlet-class>action.DACControllerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TarefaServlet</servlet-name>
        <url-pattern>/TarefaServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AtividadeServlet</servlet-name>
        <url-pattern>/AtividadeServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ContaServlet</servlet-name>
        <url-pattern>/ContaServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AnotacaoServlet</servlet-name>
        <url-pattern>/AnotacaoServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OportunidadeServlet</servlet-name>
        <url-pattern>/OportunidadeServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CampanhaServlet</servlet-name>
        <url-pattern>/CampanhaServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VendaServlet</servlet-name>
        <url-pattern>/VendaServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DACControllerServlet</servlet-name>
        <url-pattern>/DACControllerServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <!-- Tempo de sessão -->
        <session-timeout>60</session-timeout>
    </session-config>
    <!-- Página inicial -->
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
        <welcome-file>dashboard.jsp</welcome-file>
    </welcome-file-list>
