<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
<class name="bean.Oportunidade" table="oportunidade">  
    <id name="id">  
    <generator class="increment"></generator>  
    </id>  
    <property name="titulo"></property>  
    <property name="descricao"></property>  
    <property name="dataCadastro"></property> 
    <property name="dataFechamento"></property> 
    <property name="valor"></property> 
 </class>  
</hibernate-mapping>
